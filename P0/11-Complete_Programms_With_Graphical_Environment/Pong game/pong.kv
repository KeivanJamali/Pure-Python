<PongBall>:
    size: 50, 50
    canvas:
        Ellipse:
            pos : self.pos
            size : self.size

<PongPaddle>:
    size: 25, 200
    canvas:
        Rectangle:
            pos : self.pos
            size : self.size

<PongGame>:
    ball : ball
    player_l : player_left
    player_r : player_right
    canvas:
        Rectangle:
            pos: self.center_x - 5, 0
            size: 10, self.height

    Label:
        text: str(root.player_r.score)
        font_size : 70
        center_x : root.width /4
        center_y : root.height - 50

    Label:
        text: str(root.player_l.score)
        font_size : 70
        center_x : root.width * 3/4
        center_y : root.height - 50

    PongBall:
        id: ball
        center: self.parent.center

    PongPaddle:
        id: player_left
        x : root.x
        y : root.height/2 - 100

    PongPaddle:
        id: player_right
        x : root.width-25
        y : root.height/2 - 100